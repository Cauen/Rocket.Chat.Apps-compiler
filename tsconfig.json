{
    "compilerOptions": {
        /* Basic Options */
        "target": "ESNext",
        "module": "CommonJS",
        "allowJs": false,
        "checkJs": false,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "./tests",
        "example",
        "dist"
    ]
}
